<h1>Discharge patient(s)</h1>

<% form_for(@discharge) do |f| %>
  <%= f.error_messages %>
<fieldset>
  <p>
    <%= f.label :patient_id %><br />
    <%= f.text_field :patient_id %>
  </p>
  <p>
    <%= f.label :date_discharged %><br />
    <%= f.datetime_select :date_discharged %>
  </p>
  <p>
    <%= f.label :drugs_taken_home %><br />
    <%= f.text_area :drugs_taken_home %>
  </p>
  <p>
    <%= f.label :discharged_by %><br />
    <%= f.text_field :discharged_by %>
  </p>
 </fieldset>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Back', discharges_path %>
