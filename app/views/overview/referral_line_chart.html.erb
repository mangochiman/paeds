
<html>
<head> <meta http-equiv="Content-Type" content="text/html; charset=utf-8"> <script language="javascript" type="text/javascript" src="../javascripts/jquery.js"></script> <script language="javascript" type="text/javascript" src="../javascripts/jquery.flot.js"></script> </head>
<body>
Number of Patients Referred Against Months <div class="yaxis">patients</div>
<div class="graph" >
<div id="placeholder" style="width:600px;height:300px"></div>
<script language="javascript" type="text/javascript">
 
var $j = jQuery.noConflict();
 
$j(function () {
 
var data = [
{
label: "Monthly Referral",
data: [[1,<%= @january %>],[2,<%= @february %>],[3,<%= @march %>],[4,<%= @april %>],
[5,<%=@may %>],[6,<%=@june %>],[7,<%=@july %>],[8,<%=@august %>],[9,<%=@september %>],
[10,<%=@october %>],[11,<%=@november %>],[12,<%=@december %>]]
}
];

var options = {
legend: {
show: true,
margin: 10,
backgroundOpacity: 0.5
},
points: {
show: true,
radius: 3
},
shadowSize: 12, 
lines: {
show: true
},
grid: {
borderWidth:0,
clickable:true,
hoverable:true
},
yaxis: {
tickDecimals: 0
},
 xaxis: {ticks: [[1, ' Jan'], [2, 'Feb'], [3, 'March'], [4, 'April'], [5, 'May'], [6, 'June'], [7, 'July'], [8, 'Aug'], [9, 'Sept'], [10, 'Oct'], [11, 'Nov'], [12, 'Dec']]},

};
 
var plotarea = $j("#placeholder");
 
$j.plot( plotarea , data, options );
});

</script>
</div>
<div class="xaxis">Months</div>
</body>
</html>
