<table>
<tr class='table_header' >
  <th>First Name</th>
  <th>Last Name</th>
  <th>Age</th>
  <th>Drug Name</th>
  <th>Quantity</th>
  <th>Prescribed By</th>
  
</tr>
<% @patients.each do |patient| %>
<tr class="<%= cycle('rowA', 'rowB') %>">
 <td><%= patient.first_name %></td>
 <td><%= patient.last_name %></td>
 <td><%= patient.age %></td>
 <td><%= patient.treatments.collect{|t| t.drug_name}%></td>
 <td><%= patient.treatments.collect{|t| t.quantity}%></td>
 <td><%= patient.treatments.collect{|t| t.prescibed_by}%></td>
 </tr>

<% end %>

</table>
<br />
<div class='count'>
Total : <%= @patients.count %> 
</div>
<div class="pdf">
<%= link_to "PDF", :controller => "overview", :action =>"no_treatment" %>
</div>

