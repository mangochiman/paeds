  <h1>Patients Overview</h1>

<table>
  <tr>
    <th>ID</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Age</th>
    <th>Village</th>
    <th>Ta</th>
    <th>District</th>
    <th>Chief complaint</th>
    <th>Guardian</th>
    <th>Date admitted</th>
     
  </tr>

<% for patient in @patient %>

  <tr class="<%= cycle('rowA', 'rowB') %>">
    <td><%=h patient.id %></td>
    <td><%=h patient.first_name %></td>
    <td><%=h patient.last_name %></td>
    <td><%=h patient.age %></td>
    <td><%=h patient.village %></td>
    <td><%=h patient.ta %></td>
    <td><%=h patient.district %></td>
    <td><%=h patient.chief_complaint %></td>
    <td><%=h patient.guardian %></td>
    <td><%=h patient.date_admitted %></td>
     
  </tr>

<% end %>
</table>


