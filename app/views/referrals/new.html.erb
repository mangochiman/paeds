<h1>Transfer Patient</h1>

<% form_for(@referral) do |f| %>
  <%= f.error_messages %>
<fieldset>
<center><table>
  <tr>
    <td><%= f.label :patient_id %></td>
    <td><%= f.text_field :patient_id %></td>
  </tr>
  <tr>
    <td><%= f.label :date_referred %></td>
    <td><%= f.datetime_select :date_referred %></td>
  </tr>
  <tr>
    <td><%= f.label :reason %></td>
    <td><%= f.text_area :reason %></td>
  </tr>
  <tr>
    <td><%= f.label :vehicle_reg_no %></td>
    <td><%= f.text_field :vehicle_reg_no %></td>
  </tr>
  <tr>
    <td><%= f.label :confirmed_by %></td>
    <td><%= f.text_field :confirmed_by %></td>
  </tr>
  </table>
  </center>
  </fieldset>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Back', referrals_path %>
